<% layout("/layouts/boilerplate") %>

<style>
  #filters {
    margin-top: 2rem;
    margin-bottom: 2rem;
    display: flex;
    justify-content: space-evenly;
  }

  .filter {
    border: none;
    text-align: center;
    margin-left: 2rem;
    opacity: 0.7;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .setting:hover {
    height: 50px;
    border: 2px solid black;
    border-radius: 10px;
    padding: 0px 30px 0px;
    opacity: 1;
  }

  .border1 {
    padding: 10px 40px 40px;
  }

  .border1:hover {
    height: 50px;
    text-align: center;
    border-radius: 10px;
    border: 2px solid black;
  }

  .tax-info {
    display: none;
  }
</style>

<div id="filters">
  <div class="filter">
    <i class="fa-solid fa-bed"></i>
    <p>Bed</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-mug-hot"></i>
    <p>Breakfast</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-cow"></i>
    <p>Farm</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-satellite"></i>
    <p>OMG!</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-snowflake"></i>
    <p>Arctic</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-fire"></i>
    <p>Trending</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-water"></i>
    <p>Lake</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-umbrella-beach"></i>
    <p>Beach</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-mountain-sun"></i>
    <p>Mountain</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-person-swimming"></i>
    <p>Pools</p>
  </div>

  <div class="form-check-reverse border1 filter form-switch">
    <input
      class="form-check-input"
      type="checkbox"
      role="switch"
      id="flexSwitchCheckDefault"
    />
    <label class="form-check-label" for="flexSwitchCheckDefault"
      >Display total after taxces</label
    >
  </div>
</div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for(let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b> <%= listing.title %> </b><br />
          &#8377; <%= listing.price.toLocaleString("en-IN") %>/night
          <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>

<script>
  let getswitch = document.getElementById("flexSwitchCheckDefault");

  getswitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    // Iterate over the HTMLCollection

    for (info of taxInfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
